{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "baseUrl": "src",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "esnext.asynciterable"
        ],
        "types": [
            "node",
            "jasmine"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}